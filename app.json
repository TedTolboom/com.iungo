{
	"id": "com.iungo",
	"name": {
		"en": "Iungo"
	},
	"version": "0.2.6",
	"compatibility": ">=1.3",
	"description": {
		"en": "Control Iungo using Homey",
		"nl": "Bedien Iungo met je Homey"
	},
	"category": ["energy","appliances", "tools"],
	"images": {
		"large": "assets/images/large.png",
		"small": "assets/images/small.png"
	},
	"author": {
		"name": "Robert Raaijmakers",
		"email": "dutchfighter@live.nl"
	},
	"contributors": {
		"developers": [{
			"name": "Robert Raaijmakers",
			"email": "dutchfighter@live.nl"
		}]
	},
	"flow": {
		"triggers": [
		{
			"id": "meter_power_t1_changed",
			"title": {
				"en": "Power meter T1 changed",
				"nl": "Verbruik T1 veranderd"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"filter": "driver_id=energy_meter"
			}],
			"tokens": [{
				"name": "power_used",
				"type": "number",
				"title": {
					"en": "kWh",
					"nl": "kWh"
				}
			}]
		},
		{
			"id": "meter_power_t2_changed",
			"title": {
				"en": "Power meter T2 changed",
				"nl": "Verbruik T2 veranderd"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"filter": "driver_id=energy_meter"
			}],
			"tokens": [{
				"name": "power_used",
				"type": "number",
				"title": {
					"en": "kWh",
					"nl": "kWh"
				}
			}]
		}],
		"conditions": [],
		"actions": []
	},
	"drivers": [{
		"id": "energy_meter",
		"name": {
			"en": "Energy Controller",
			"nl": "Energie Controller"
		},
		"images": {
			"large": "drivers/energy_meter/assets/images/large.jpg",
			"small": "drivers/energy_meter/assets/images/small.jpg"
		},
		"class": "sensor",
		"capabilities": ["measure_power", "meter_power.sum", "meter_power.t1", "meter_power.t2", "meter_gas.sum", "meter_gas"],
		"capabilitiesOptions": {
			"measure_power": {
				"title": {
					"en": "Power",
					"nl": "Verbruik"
				}
			},
			"meter_power.sum": {
				"title": {
					"en": "Power Total",
					"nl": "Totaal verbruik"
				}
			},
			"meter_power.t1": {
				"title": {
					"en": "Power T1",
					"nl": "Telwerk 1"
				}
			},
			"meter_power.t2": {
				"title": {
					"en": "Power T2",
					"nl": "Telwerk 2"
				}
			},
			"meter_gas.sum": {
				"title": {
					"en": "Power Total",
					"nl": "Totaal verbruik"
				}
			},
			"meter_gas": {
				"title": {
					"en": "Gas",
					"nl": "Gas"
				}
			}
		},
		"pair": [
			{
				"id": "select_iungo",
				"navigation": {
					"next": "enter_credentials"
				}
			},
			{
				"id": "enter_credentials"
			},
			{
				"id": "list_devices",
				"template": "list_devices",
				"navigation": {
					"next": "add_devices"
				}
			},
			{
				"id": "add_devices",
				"template": "add_devices"
			}
		]
	}, {
		"id": "water_meter",
		"name": {
			"en": "Water Meter",
			"nl": "Watermeter"
		},
		"images": {
			"large": "drivers/water_meter/assets/images/large.png",
			"small": "drivers/water_meter/assets/images/small.png"
		},
		"class": "sensor",
		"capabilities": [
			"meter_water"
		],
		"capabilitiesOptions": {
			"meter_water": {
				"title": {
					"en": "Water",
					"nl": "Water"
				}
			}
		},
		"pair": [
			{
				"id": "select_iungo",
				"navigation": {
					"next": "enter_credentials"
				}
			},
			{
				"id": "enter_credentials"
			},
			{
				"id": "list_devices",
				"template": "list_devices",
				"navigation": {
					"next": "add_devices"
				}
			},
			{
				"id": "add_devices",
				"template": "add_devices"
			}
		],
		"settings": [{
			"type": "group",
			"label": {
				"en": "Water meter settings",
				"nl": "Watermeter instellingen"
			},
			"children": [{
				"id": "offset",
				"type": "number",
				"label": {
					"en": "Offset",
					"nl": "Beginstand"
				},
				"value": 0
			}]
		}]
	}, {
		"id": "iungo_socket",
		"name": {
			"en": "Socket",
			"nl": "Schakelaar"
		},
		"images": {
			"large": "drivers/iungo_socket/assets/images/large.jpg",
			"small": "drivers/iungo_socket/assets/images/small.jpg"
		},
		"class": "socket",
		"capabilities": [
			"measure_power",
			"onoff"
		],
		"pair": [
			{
				"id": "select_iungo",
				"navigation": {
					"next": "enter_credentials"
				}
			},
			{
				"id": "enter_credentials"
			},
			{
				"id": "list_devices",
				"template": "list_devices",
				"navigation": {
					"next": "add_devices"
				}
			},
			{
				"id": "add_devices",
				"template": "add_devices"
			}
		]
	}]
}
